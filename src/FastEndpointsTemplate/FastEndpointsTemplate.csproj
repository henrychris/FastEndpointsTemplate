    </PackageReference>
    <PackageReference Include="FastEndpoints.Swagger" Version="5.25.0" />
    <PackageReference Include="Serilog.AspNetCore" Version="8.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FastEndpointsTemplate.Application\FastEndpointsTemplate.Application.csproj" />
